<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="colorControlActivated">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorGreay</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="btnStyle" parent="@android:style/ButtonBar">
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_marginRight">25dip</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>
